<% content_for :page_css do %>
  <%= stylesheet_link_tag "users", "data-turbo-track": "reload" %>
<% end %>

<div class="header">User Registration</div>
<div class="users-container">

  <%= form_with model: @user, local: true, class: "registration-form" do |form| %>
    <div class="form-group">
      <%= form.label :username, "NAME" %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :age, "AGE" %>
      <%= form.number_field :age, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :favorite_food, "FAVORITE FOOD" %>
      <%= form.text_field :favorite_food, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "EMAIL" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "PASSWORD" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "CONFIRM PASSWORD" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="buttons">
      <%= form.submit "REGISTRATION", class: "btn btn-primary" %>
      <%= link_to "BACK", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
