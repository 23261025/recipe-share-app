<div class="header">Reviews</div>

<%= form_with model: @review, url: recipe_reviews_path(@recipe), local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "NAME:" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id, "ID:" %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, "REVIEWS:" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating, "RATING:" %>
    <%= form.radio_button :rating, 1 %> 1
    <%= form.radio_button :rating, 2 %> 2
    <%= form.radio_button :rating, 3 %> 3
    <%= form.radio_button :rating, 4 %> 4
    <%= form.radio_button :rating, 5 %> 5
  </div>

  <div class="buttons">
    <%= form.submit "SUBMIT", class: "btn btn-primary" %>
    <%= link_to "BACK", recipes_path, class: "btn btn-secondary" %>
  </div>
<% end %>
